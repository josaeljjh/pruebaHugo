<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskHugo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Set the navigation bar to 50% translucent white -->
        <item name="android:navigationBarColor">@color/light_black</item>
        <!-- Since the nav bar is white, we will use dark icons -->
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">?attr/isLightTheme</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!-- Set the navigation bar to 50% translucent white -->
        <item name="android:navigationBarColor">@color/negro_dark</item>
    </style>

    <!--Button style-->
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/negro_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="cornerRadius">@dimen/_20sdp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/_3sdp</item>
        <item name="shapeAppearance">@dimen/_5sdp</item>
        <item name="android:height">@dimen/_55sdp</item>
    </style>
    <style name="hidetitle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:scaleType">fitXY</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_only_on_top</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay_only_on_top" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">37dp</item>
        <item name="cornerSizeTopLeft">37dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
</resources>